<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.ui.job.ViewJobActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title" />

            <TextView
                android:id="@+id/position"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Position"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/jobType"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Job type" />

                <TextView
                    android:id="@+id/postedOn"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/postedDate"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="2dp"
                    android:drawableTint="?attr/colorOnBackground"
                    android:text="Posted On: " />

                <TextView
                    android:id="@+id/postedDate"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="May 20, 2023" />

                <TextView
                    android:id="@+id/salary"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobType"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_money1"
                    android:drawableTint="?attr/colorOnBackground"
                    android:text="4lpa-5lpa" />

                <TextView
                    android:id="@+id/apply"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobType"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/applyDate"

                    android:drawableStart="@drawable/ic_apply"
                    android:drawablePadding="5dp"
                    android:drawableTint="?attr/colorOnBackground"
                    android:text="Apply by " />

                <TextView
                    android:id="@+id/applyDate"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobType"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:text="May 20, 2002 " />

                <TextView
                    android:id="@+id/location"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/salary"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_outline_location"
                    android:drawableTint="?attr/colorOnBackground"
                    android:text="Gurugram" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/gray_100" />

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="About Company" />

            <TextView
                android:id="@+id/url"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="www.google.com" />

            <TextView
                android:id="@+id/aboutCompany"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/dummy_text" />

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="About the Job" />

            <TextView
                android:id="@+id/description"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/dummy_text" />


            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Skills Required" />

            <TextView
                android:id="@+id/skills"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Java , python, c++, restapi,all web languanges" />


            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Qualifications" />

            <TextView
                android:id="@+id/qualification"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="any graduate of Bca Mca Btech 2023 passout" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:padding="16dp"
                android:text="Apply Now"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>